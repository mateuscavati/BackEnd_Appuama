datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}

model Car {
  id        Int         @id @default(autoincrement())
  name      String
  year      Int
  checklists Checklist[]
  balances   Balance[]
}

model Checklist {
  id     Int    @id @default(autoincrement())
  title  String
  carId  Int
  car    Car    @relation(fields: [carId], references: [id])
}

model Balance {
  id       Int   @id @default(autoincrement())
  carId    Int
  frontLeft  Float
  frontRight Float
  rearLeft   Float
  rearRight  Float
  car      Car   @relation(fields: [carId], references: [id])
}
